{
  "name": "kube-credential",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:issuance": "npm start --workspace=issuance-api",
    "start:verification": "npm start --workspace=verification-api",
    "start:web": "npm start --workspace=web-ui",
    "build:issuance": "npm run build --workspace=issuance-api",
    "build:verification": "npm run build --workspace=verification-api",
    "build:web": "npm run build --workspace=web-ui",
    "test": "npm test --workspaces --if-present"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
